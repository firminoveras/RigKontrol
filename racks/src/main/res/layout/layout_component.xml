<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Component_Root"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/Component_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_component_outline"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_component_buttons_outline"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Component_Config"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/ic_rack_config"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/Component_Remove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/ic_minus"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>