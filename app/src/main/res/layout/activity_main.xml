<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    tools:context=".MainActivity"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_toolbar"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="7dp"
                android:src="@drawable/ic_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <com.firmino.rigkontrol.kontrollers.KSeekBar
                android:id="@+id/Main_VolumeIn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".8"
                app:k_seekbar_control_num="@integer/cc_vol_in"
                app:k_seekbar_description="IN"
                app:k_seekbar_max="127"
                app:k_seekbar_min="0" />

            <com.firmino.rigkontrol.kontrollers.KGate
                android:id="@+id/Main_Gate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.6" />

            <com.firmino.rigkontrol.kontrollers.KSeekBar
                android:id="@+id/Main_VolumeOut"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".8"
                app:k_seekbar_control_num="@integer/cc_vol_out"
                app:k_seekbar_description="OUT"
                app:k_seekbar_max="127"
                app:k_seekbar_min="0" />

            <com.firmino.rigkontrol.kontrollers.KImageButton
                android:id="@+id/Main_Show_Configs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:padding="5dp"
                android:src="@drawable/ic_config"
                app:k_is_toggled="true"
                tools:ignore="ContentDescription" />

            <com.firmino.rigkontrol.kontrollers.KImageButton
                android:id="@+id/Main_Exit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:padding="3dp"
                android:src="@android:drawable/ic_lock_power_off"
                tools:ignore="ContentDescription" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Main_OptionsLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp">

                <include layout="@layout/layout_options" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_little_rounded_square"
                    android:backgroundTint="#3D3D3D"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dialog"
                        android:backgroundTint="#121212">

                        <TextView
                            android:id="@+id/Tool_Preset_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center_vertical"
                            android:maxLength="12"
                            android:paddingStart="10dp"
                            android:paddingEnd="50dp"
                            android:text="@string/untitled"
                            android:textAllCaps="false"
                            android:textColor="@color/light_foreground"
                            android:textSize="18sp"
                            android:typeface="monospace" />

                        <Button
                            android:id="@+id/Tool_Save_Preset_Button"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/bg_dialog"
                            android:backgroundTint="@color/disabled_foreground"
                            android:text="@string/salvar"
                            android:textColor="@color/light_foreground"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/Tool_OpenPreset"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_margin="2dp"
                            android:background="@drawable/bg_button_right_borderless"
                            android:padding="10dp"
                            android:src="@android:drawable/arrow_down_float"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <com.firmino.rigkontrol.kontrollers.KStateButton
                        android:id="@+id/Tool_KontrollerVisible"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight=".1"
                        android:background="@drawable/bg_button"
                        app:k_statebutton_is_on="true"
                        app:k_statebutton_text_off="RACKS"
                        app:k_statebutton_text_on="KONTROLLER" />

                    <com.firmino.rigkontrol.kontrollers.KImageButton
                        android:id="@+id/Tool_Previous_Preset"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_left"
                        tools:ignore="ContentDescription" />

                    <com.firmino.rigkontrol.kontrollers.KImageButton
                        android:id="@+id/Tool_Next_Preset"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_right"
                        tools:ignore="ContentDescription" />

                    <com.firmino.rigkontrol.kontrollers.KImageButton
                        android:id="@+id/Tool_Clear_Preset"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:padding="5dp"
                        android:src="@drawable/ic_clear" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Container_Main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/bg_container"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ScrollView
                        android:id="@+id/Container_Racks"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/bg_container_intern"
                        android:padding="5dp"
                        tools:ignore="Suspicious0dp">

                        <LinearLayout
                            android:id="@+id/Main_Racks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.firmino.racks.Rack
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:id="@+id/Container_Kontroller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_container_intern"
                        android:padding="5dp">

                        <com.firmino.rigkontrol.kontrollers.Kontroller
                            android:id="@+id/Main_Kontroller"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/bg_toolbar_shadow"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/Main_StatusBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_dark_gray"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <ImageView
            android:id="@+id/Main_Status_Image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Main_Status_Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/Main_Connection_Status_Image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Main_Connection_Status_Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:typeface="monospace" />

    </LinearLayout>

</FrameLayout>