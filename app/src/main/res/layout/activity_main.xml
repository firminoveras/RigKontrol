<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    tools:context=".MainActivity"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_toolbar"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="7dp"
                android:src="@drawable/ic_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <com.firmino.rigkontrol.kontrollers.KSeekBar
                android:id="@+id/Main_VolumeIn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".8"
                app:k_seekbar_control_num="@integer/cc_vol_in"
                app:k_seekbar_description="IN"
                app:k_seekbar_max="127"
                app:k_seekbar_min="0" />

            <com.firmino.rigkontrol.kontrollers.KGate
                android:id="@+id/Main_Gate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.6" />

            <com.firmino.rigkontrol.kontrollers.KSeekBar
                android:id="@+id/Main_VolumeOut"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".8"
                app:k_seekbar_control_num="@integer/cc_vol_out"
                app:k_seekbar_description="OUT"
                app:k_seekbar_max="127"
                app:k_seekbar_min="0" />

            <ImageView
                android:id="@+id/Main_Show_Configs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:padding="5dp"
                android:src="@drawable/ic_config"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/Main_Exit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:padding="3dp"
                android:src="@android:drawable/ic_lock_power_off"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Main_OptionsLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp">

                <include layout="@layout/layout_options" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_little_rounded_square"
                    android:backgroundTint="#3D3D3D"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dialog"
                        android:backgroundTint="#121212">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/app_name"
                            android:textAllCaps="false"
                            android:textColor="@color/light_foreground"
                            android:textSize="18sp"
                            android:typeface="monospace" />

                        <Button
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/bg_dialog"
                            android:backgroundTint="@color/disabled_foreground"
                            android:text="@string/salvar"
                            android:textColor="@color/light_foreground"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_margin="2dp"
                            android:background="@drawable/bg_button_right_borderless"
                            android:padding="10dp"
                            android:src="@android:drawable/arrow_down_float"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight=".1"
                        android:background="@drawable/bg_button" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:background="@drawable/bg_button_left"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/preset"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:background="@drawable/bg_button_right"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/preset"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/bg_little_rounded_square"
                    android:backgroundTint="#3D3D3D"
                    android:padding="5dp">

                    <com.firmino.rigkontrol.kontrollers.Kontroller
                        android:id="@+id/Main_Kontroller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/bg_toolbar_shadow"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/Main_StatusBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_dark_gray"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">


        <ImageView
            android:id="@+id/Main_Status_Image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Main_Status_Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/Main_Connection_Status_Image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Main_Connection_Status_Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/Main_Status_Geral_Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:typeface="monospace" />

    </LinearLayout>

</FrameLayout>