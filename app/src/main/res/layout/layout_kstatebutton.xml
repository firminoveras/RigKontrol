<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:backgroundTint="@color/bg_black"
    android:orientation="horizontal"
    android:padding="2dp">

    <Button
        android:id="@+id/KStateButton_Off"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:background="@drawable/bg_button_left_borderless"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/KStateButton_On"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_button_right_borderless_pressed"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#272727"
        android:textSize="12sp"
        tools:ignore="ButtonStyle" />
</LinearLayout>
