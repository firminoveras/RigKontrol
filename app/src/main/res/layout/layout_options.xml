<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_options_layout"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_pressed"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_config_2"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="8dp"
            android:text="@string/options"
            android:textColor="@color/bg_dark_gray"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <com.firmino.rigkontrol.kontrollers.KStateButton
        android:id="@+id/Options_ShowStatusBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:k_statebutton_text_off="Hide Status Bar"
        app:k_statebutton_text_on="Show Status Bar" />

    <com.firmino.rigkontrol.kontrollers.KStateButton
        android:id="@+id/Options_ExpandButtons"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:k_statebutton_text_off="Compact Buttons"
        app:k_statebutton_text_on="Extended Buttons" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_pressed"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_config_2"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="8dp"
            android:text="@string/connection"
            android:textColor="@color/bg_dark_gray"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_text"
        android:backgroundTint="@color/bg_black"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_left_borderless"
            android:backgroundTint="@color/dark_foreground"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/usb_status"
            android:textColor="@color/light_foreground"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Options_USB_Status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_text"
        android:backgroundTint="@color/bg_black"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="3"
            android:background="@drawable/bg_button_left_borderless"
            android:backgroundTint="@color/dark_foreground"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/midi_channel"
            android:textColor="@color/light_foreground"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Options_ch_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_center_borderless"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/minus"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Options_ch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/Options_ch_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_right_borderless"
            android:text="@string/plus"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_text"
        android:backgroundTint="@color/bg_black"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_left_borderless"
            android:backgroundTint="@color/dark_foreground"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/connect"
            android:textColor="@color/light_foreground"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Options_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_right_borderless"
            android:text="@string/offline"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>

