<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="20dp" android:width="20dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/bg_dark_gray" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:end="4dp"
        android:start="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/bg_dark_gray" />
        </shape>
    </item>
</layer-list>