<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:top="2dp"
                android:bottom="2dp" />
            <gradient
                android:startColor="#4B4B4B"
                android:endColor="#3E3E3E"
                android:angle="270" />
            <corners android:topRightRadius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A4A4A"
                android:endColor="#444444"
                android:angle="270" />
            <corners android:topRightRadius="4dp" />
        </shape>
    </item>
</layer-list>