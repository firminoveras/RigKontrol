<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KSeekBar">
        <attr name="k_seekbar_description" format="string" />
        <attr name="k_seekbar_min" format="integer" />
        <attr name="k_seekbar_max" format="integer" />
        <attr name="k_seekbar_progress" format="integer" />
        <attr name="k_seekbar_control_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="KSlider">
        <attr name="k_slider_description" format="string" />
        <attr name="k_slider_control_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="KStateButton">
        <attr name="k_statebutton_text_on" format="string" />
        <attr name="k_statebutton_is_on" format="boolean" />
        <attr name="k_statebutton_text_off" format="string" />
    </declare-styleable>

    <declare-styleable name="KImageButton">
        <attr name="k_is_toggled" format="boolean" />
        <attr name="k_align" format="enum">
            <enum name="normal" value="0" />
            <enum name="rigth" value="1" />
            <enum name="left" value="2" />
            <enum name="none" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="KFootSwitch">
        <attr name="k_button_off_value" format="integer" />
        <attr name="k_button_on_value" format="integer" />
        <attr name="k_button_control_num" format="integer" />
        <attr name="k_button_is_toggled" format="boolean" />
        <attr name="k_button_description" format="string" />
    </declare-styleable>

    <declare-styleable name="KNumberPicker">
        <attr name="k_number_picker_min_value" format="integer" />
        <attr name="k_number_picker_max_value" format="integer" />
        <attr name="k_number_picker_value" format="integer" />
        <attr name="k_number_picker_title" format="string" />
    </declare-styleable>

    <declare-styleable name="KTitle">
        <attr name="k_title" format="string" />
        <attr name="k_icon" format="reference" />
    </declare-styleable>
    <declare-styleable name="KListPicker">
        <attr name="k_list_picker_title" format="string" />
        <attr name="k_list_picker_item_list" format="reference" />
    </declare-styleable>
    <declare-styleable name="KTextEdit">
        <attr name="k_text_edit_title" format="string" />
        <attr name="k_text_edit_text" format="string" />
    </declare-styleable>

</resources>